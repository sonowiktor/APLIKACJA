<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PizzaOrderActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza Na Kawalki Gdansk"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/pizza1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Margherita"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/pizza2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pepperoni"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/pizza3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hawajska"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="255dp" />

    <TextView
        android:id="@+id/pizza4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capriciosa"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/pizza5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbonara"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:id="@+id/pizza6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diavola"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POTWIERDZ"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="605dp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WYCZYSC"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="604dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="wrap_content"
